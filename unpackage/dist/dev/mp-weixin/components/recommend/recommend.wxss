.recommend .swiper {
  height: 350rpx;
}
.recommend .swiper image {
  width: 100%;
  height: 350rpx;
}
.recommend .policy-list {
  display: flex;
  margin: 10rpx 0;
}
.recommend .policy-list .policy-item {
  flex: 1;
  text-align: center;
}
.recommend .policy-list .policy-item image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.recommend .policy-list .policy-item text {
  font-size: 26rpx;
}
.recommend .nav-list {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}
.recommend .nav-list .nav-item {
  width: 20%;
  text-align: center;
  margin: 5rpx 0;
}
.recommend .nav-list .nav-item image {
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
}
.recommend .nav-list .nav-item view {
  font-size: 26rpx;
  text-align: center;
  margin: 5rpx 0;
}
.recommend .category-list .category-item {
  margin: 10rpx 0;
}
.recommend .category-list .category-item .category-item-image {
  width: 100%;
  height: 370rpx;
}
.recommend .category-list .category-item .category-scroll {
  display: flex;
  white-space: nowrap;
  height: 300rpx;
}
.recommend .category-list .category-item .category-scroll .category-scroll-item {
  height: 300rpx;
  width: 200rpx;
  display: inline-block;
  margin: 5rpx;
}
.recommend .category-list .category-item .category-scroll .category-scroll-item .category-scroll-item-image {
  width: 150rpx;
  height: 150rpx;
  background-color: #f5f5f5;
}
.recommend .category-list .category-item .category-scroll .category-scroll-item .category-scroll-item-desc {
  font-size: 26rpx;
  white-space: pre-wrap;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

