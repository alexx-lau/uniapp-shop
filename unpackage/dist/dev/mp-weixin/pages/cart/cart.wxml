<view class="cart"><view class="cart-list"><block wx:for="{{cartList}}" wx:for-item="item" wx:for-index="idx" wx:key="idx"><view class="cart-item"><text data-event-opts="{{[['tap',[['setChecked',['$0'],[[['cartList','',idx,'goodsId']]]]]]]}}" class="{{['iconfont','icon-gouxuan',(item.selected===1)?'selected':'']}}" bindtap="__e"></text><view class="goods-item"><image class="goods-image" src="{{item.picUrl}}" mode></image><view class="goods-info"><view class="goods-name">{{''+item.desc+''}}</view><view class="goods-price">{{'￥'+item.price+'元'}}</view></view></view><view class="count-ctrl"><text data-event-opts="{{[['tap',[['subCount',['$0'],[[['cartList','',idx,'goodsId']]]]]]]}}" class="sub" bindtap="__e">-</text><text class="count">{{item.count}}</text><text data-event-opts="{{[['tap',[['addCount',['$0'],[[['cartList','',idx,'goodsId']]]]]]]}}" class="add" bindtap="__e">+</text></view></view></block></view><view class="footer"><text data-event-opts="{{[['tap',[['allSelected',[!isAllSelected]]]]]}}" class="{{['iconfont','icon-gouxuan',(isAllSelected===true)?'active':'']}}" bindtap="__e"></text><text class="selected">{{"已选"+totalSelectedCount}}</text><text class="right"><text class="btn">{{"合计"+totalSelectedPrice}}</text><text class="btn order">下单</text></text></view></view>